{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "importsNotUsedAsValues": "error",
    "noUnusedParameters": false,
    "moduleResolution": "node",

    "resolveJsonModule": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noUnusedLocals": true,
    "importHelpers": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "./dist",

    "module": "esnext",
    "target": "esnext",
    "sourceMap": true,
    "jsx": "preserve",
    "checkJs": true,
    "allowJs": true,
    "baseUrl": ".",
    "strict": true,

    "typeRoots": [
      "node_modules/@types"
    ],

    "types": [
      "node"
    ]
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
